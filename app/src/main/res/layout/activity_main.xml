    <Button
        android:layout_height="70dp"
        android:id="@+id/button"
        android:alpha="100"
        style="oval"
        android:background="@drawable/login"
        android:clickable="false"
        android:layout_width="150dp"

        android:layout_marginBottom="33dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/editID"
        android:layout_alignBaseline="@+id/textView"
        android:layout_alignBottom="@+id/textView"
        android:layout_alignStart="@+id/editPWD"
        android:layout_alignEnd="@+id/editPWD" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="密碼："
        android:id="@+id/textView2"
        android:textSize="25dp"
        android:textColor="?android:attr/panelColorBackground"
        android:layout_alignBaseline="@+id/editPWD"
        android:layout_alignBottom="@+id/editPWD"
        android:layout_toStartOf="@+id/checkBox8"
        android:layout_marginEnd="12dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="帳號："
        android:id="@+id/textView"
        android:textSize="25dp"
        android:layout_marginBottom="26dp"
        android:textColor="?android:attr/panelColorBackground"
        android:layout_above="@+id/editPWD"
        android:layout_alignStart="@+id/textView2" />

    <CheckBox
        android:text="記住密碼"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBox8"
        android:layout_above="@+id/button"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_height="wrap_content"

        android:id="@+id/editPWD"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_marginRight="37dp"

        android:layout_width="220dp"
        android:layout_marginBottom="14dp"
        android:layout_above="@+id/checkBox8"
        android:layout_toEndOf="@+id/textView2" />
