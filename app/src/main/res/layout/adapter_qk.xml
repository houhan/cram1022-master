<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp">

    <TextView
        android:text="姓名："
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView19"
        android:textSize="24sp"
        android:textColor="#000000"
        android:layout_alignBottom="@+id/tqkname"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tqkdate"
        android:textColor="#000000"
        android:textSize="25sp"
        android:layout_alignBottom="@+id/textView22"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textView22" />

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tqkreason"
        android:textColor="#000000"
        android:textSize="25sp"
        android:layout_alignTop="@+id/textView21"
        android:layout_toEndOf="@+id/textView21" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView20"
        android:textSize="24sp"
        android:textColor="#000000"
        android:layout_alignTop="@+id/tqkps"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="請假日期："
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView22"
        android:textSize="24sp"
        android:textColor="#000000"

        android:layout_below="@+id/tqkname"
        android:layout_toEndOf="@+id/textView20" />

    <TextView
        android:text="原因："
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView21"
        android:textSize="24sp"
        android:textColor="#000000"

        android:layout_below="@+id/textView22"
        android:layout_toEndOf="@+id/textView20" />

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tqkps"
        android:textColor="@color/common_google_signin_btn_text_light_default"
        android:textSize="24sp"
        android:layout_below="@+id/tqkreason"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="TextView"
        android:layout_width="163dp"
        android:layout_height="wrap_content"
        android:id="@+id/tqkname"
        android:textColor="#000000"
        android:textSize="25sp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/textView19" />
</RelativeLayout>