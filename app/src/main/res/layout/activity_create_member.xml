<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_creat_member"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="25dp"
    android:paddingRight="25dp"
    tools:context="com.example.user.cram1001.CreateMemberActivity"
    android:background="@drawable/background"
    android:padding="20dp">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/createpwd"
        android:layout_below="@+id/createid"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="12dp"
        android:layout_toEndOf="@+id/textView15" />

    <TextView
        android:text="密碼："
        android:textSize="25sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView15"
        android:layout_alignBaseline="@+id/createpwd"
        android:layout_alignBottom="@+id/createpwd"
        android:layout_alignParentStart="true"
        android:textColor="?android:attr/panelColorBackground"
        android:paddingLeft="10dp"/>

    <TextView
        android:text="姓名："
        android:textSize="25sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView16"
        android:layout_alignBaseline="@+id/createname"
        android:layout_alignBottom="@+id/createname"
        android:layout_alignParentStart="true"
        android:textColor="?android:attr/panelColorBackground"
        android:paddingLeft="10dp"/>


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/createrclass"
        android:layout_alignBaseline="@+id/textView17"
        android:layout_alignBottom="@+id/textView17"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textView17"
        android:paddingRight="10dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/createname"
        android:layout_marginTop="13dp"
        android:layout_below="@+id/createpwd"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textView16"
        android:paddingRight="10dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/createid"
        android:paddingRight="10dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="34dp"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/createpwd" />

    <TextView
        android:text="班級 :"
        android:textSize="25sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView17"
        android:textColor="?android:attr/panelColorBackground"
        android:layout_marginTop="17dp"
        android:paddingLeft="10dp"
        android:layout_below="@+id/createname"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/createname" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shape"
        android:paddingRight="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <Button
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:id="@+id/test"
            android:textColor="?android:attr/panelColorBackground"
            android:background="@drawable/creat"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="46dp" />

        <TextView
            android:text="帳號："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView14"
            android:textSize="25sp"
            android:textColor="?android:attr/panelColorBackground"
            android:paddingLeft="10dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="41dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:id="@+id/beaconminor"
            android:layout_marginBottom="62dp"
            android:layout_above="@+id/test"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/textView18" />

        <TextView
            android:text="Beacon Minor："
            android:textSize="25sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView18"
            android:textColor="?android:attr/panelColorBackground"
            android:paddingLeft="10dp"
            android:layout_alignBottom="@+id/beaconminor"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

</RelativeLayout>
